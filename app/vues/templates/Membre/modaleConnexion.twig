{% if actionUri %} 
<script type="module">
  let eDialog = document.getElementById('modaleConnexion');
  eDialog.addEventListener('cancel', (event) => { event.preventDefault();});
  eDialog.showModal();
</script>
{% endif %}

<dialog id="modaleConnexion">
  <section>
    <h1>Connexion</h1>
    
    <form name="frmConnexion" id="formConnexion" method="POST"{% if actionUri %} action="{{ actionUri }}"{% endif %}>

      <br><span id="messageErreurConnexion">&nbsp;{{ messageErreurConnexion }}</span>

      <label>Courriel</label>
      <input name="courriel" value="">

      <label>Mot de passe</label>
      <input type="password" name="mot_de_passe" value="">
    
      <button id="boutonConnexion" type="submit">Envoyer</button>
      <button id="boutonFermer">Fermer</button>
    </form>
  </section>
</dialog>